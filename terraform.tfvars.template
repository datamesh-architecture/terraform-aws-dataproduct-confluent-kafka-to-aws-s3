aws = {
  region     = "AWS_REGION"
  access_key = "AWS_ACCESS_KEY"
  secret_key = "AWS_SECRET_KEY"
}

confluent = {
  cloud_api_key    = "CONFLUENT_CLOUD_API_KEY"    # optionally use CONFLUENT_CLOUD_API_KEY env var
  cloud_api_secret = "CONFLUENT_CLOUD_API_SECRET" # optionally use CONFLUENT_CLOUD_API_SECRET env var
}

kafka_api_credentials = {
  api_key_id     = "KAFKA_API_KEY_ID"
  api_key_secret = "KAFKA_API_KEY_SECRET"
}

kafka = {
  environment = {
    id = "KAFKA_ENVIRONMENT_ID"
  }
  cluster = {
    id            = "KAFKA_CLUSTER_ID"
    api_version   = "KAFKA_CLUSTER_API_VERSION"
    kind          = "KAFKA_CLUSTER_KIND"
    rest_endpoint = "KAFKA_CLUSTER_REST_ENDPOINT"
  }
}

glue_catalog_database = {
  name       = "GLUE_CATALOG_NAME"
  catalog_id = "GLUE_CATALOG_ID"
}
